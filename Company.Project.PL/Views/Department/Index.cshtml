@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br/> 

<form>
    <div class="container" m-4>
        <div class="row justify-content-center">
            <div class="col-6">
                <input placeholder="search by name" name="searchinput" class="form-control" />
            </div>
            <div class="col-6">
                <input type="submit" value="search" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<br />

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="m-3 alert alert-info">
        <p>  @TempData["Message"]</p>
    </div>
}

<a asp-action="Create" asp-controller="Department" class="btn btn-primary">Create Department</a>
<br/>

@if (Model.Count() > 0){
    <table class="table table-hover table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>DateOfCreation</th>
                <th>Details</th>
                <th>Upate</th>
                <th>Delete</th>


            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Code</td>
                    <td>@item.Name</td>
                    <td>@item.CreateAt</td>

                    <Partial name="_ButtonPartialView" model="@item.Id" />

                    @* <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning"> Details</a>
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success"> Update</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> Delete</a>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
    
}else{
    <div class="mt-4 alert alert-info">
        <h4> There is no department :( </h4>
    </div>
}
