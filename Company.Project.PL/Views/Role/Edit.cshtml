@model RoleReturnToDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Role</h1>

<br />
<br />

<form asp-action="Edit" enctype="multipart/form-data">
    
    <Partial name="EmployeePartialView/_CreateEditPartialView" model="@Model"/>
    <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="btn btn-success">Add Or Remove User</a>

    <input type="submit" value="Save" asp-action="Edit" class="btn btn-primary" />
    <a asp-controller="Role" asp-action="Index" class="btn btn-light">Back To List</a>

 
</form>

@section ValidationSection {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}