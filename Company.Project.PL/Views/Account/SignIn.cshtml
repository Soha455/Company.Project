@model SignInDto

@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-w3layouts wrapper">
	<div class="main-agileinfo">
		<div class="agileits-top">
			<form asp-action="SignIN">
				<input class="text email" asp-for="Email" placeholder="Email" required>
				<input class="text" asp-for="Password" placeholder="Password" required>
				<div class="wthree-text">
					<label class="anim">
						<input asp-for="RememberMe" class="checkbox">
						<span>Remember Me</span>
					</label>
					<div class="clear"> </div>
				</div>
				<input type="submit" value="SignIN">
			</form>
			<p>Don't have an Account? <a asp-action="SignUp"> Create New Account ?</a></p>
		</div>
	</div>
</div>

@section ValidationSection {
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
	<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}